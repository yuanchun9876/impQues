<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-config.dtd"> 
<configuration> 
    <environments default="development"> 
        <environment id="development"> 
            <transactionManager type="JDBC" />
            <dataSource type="POOLED"> 
                <property name="driver" value="org.gjt.mm.mysql.Driver" /> 
                <property name="url" value="jdbc:mysql://localhost:3306/tm9?useUnicode=true&amp;characterEncoding=utf8&amp;serverTimezone=UTC" /> 
                <property name="username" value="root" /> 
                <property name="password" value="root" /> 
            </dataSource> 
        </environment> 
    </environments> 
    <mappers>
    	<mapper resource="com/yuzo/mapper/SubjectMapper.xml"/>
    	<mapper resource="com/yuzo/mapper/TopicMapper.xml"/>
    	<mapper resource="com/yuzo/mapper/JsfxMapper.xml"/>
    </mappers> 
</configuration>